doctype html
html
  head
    title Sign Up - Game Match
    link(rel="stylesheet", href="/css/style.css")
  body
    header
      .logo
        a(href="/")
          img(src="/images/logo.png", alt="Game Match Logo", style="height: 80px;")
      nav
        ul
          li: a(href="/") Home
          li: a(href="/contact") Contact Us
          li: a(href="/games") Games List
          li: a.signin-btn(href="/signin") Sign In

    main.container
      h1 Create Your Account

      if message
        p.error-message #{message}

      form(action="/signup", method="POST", class="auth-form")
        label(for="email") Email:
        input(type="email", name="email", id="email", required)

        label(for="password") Password:
        input(type="password", name="password", id="password", required)

        label(for="gender") Gender:
        select(name="gender", id="gender", required)
          option(value="") --Select Gender--
          option(value="Male") Male
          option(value="Female") Female
          option(value="Other") Other

        label(for="birthday") Birthday:
        input(type="date", name="birthday", id="birthday", required)

        label(for="mbti") MBTI Type:
        input(type="text", name="mbti", id="mbti", placeholder="e.g. INFP", required)

        button(type="submit") Sign Up

      p Already have an account?
        a(href="/signin") Sign In here.

    footer
      img(src="/images/logo.png", style="height: 20px;")
      span Â© 2025 GameMatch. All rights reserved. Privacy Policy Terms of Service
      .social
        i.fa.fa-instagram
        i.fa.fa-facebook
        i.fa.fa-twitter
